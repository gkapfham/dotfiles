# set $ws7 "7"
# set $ws8 "8"
# set $ws9 "9"

# 1 through 10
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9

# # 10 through 20
# set $ws10 "10"
# set $ws11 "11"
# set $ws12 "12"
# set $ws13 "13"
# set $ws14 "14"
# set $ws15 "15"
# set $ws16 "16"
